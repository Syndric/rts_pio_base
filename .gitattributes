# Handle line endings
* text=auto

# Explicitly force LF for files that need it
*.sh text eol=lf
*.py text eol=lf
*.js text eol=lf
# C/C++
*.cpp text eol=lf
*.hpp text eol=lf
*.h text eol=lf
*.cc text eol=lf
*.c text eol=lf
# Java/Arduino
*.java text eol=lf
*.ino text eol=lf
# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.xml text eol=lf
